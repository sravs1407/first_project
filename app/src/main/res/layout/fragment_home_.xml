                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginLeft="15dp">
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/leave_person4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:cardCornerRadius="100dp">
                                    <ImageView
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:src="@drawable/leave_person4"/>
                                </androidx.cardview.widget.CardView>
                                <TextView
                                    android:layout_width="70dp"
                                    android:layout_height="20dp"
                                    android:text="Olivia Walker"/>
                                <TextView
                                    android:layout_width="70dp"
                                    android:layout_height="20dp"
                                    android:text="06 - 07 Feb"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginLeft="15dp">
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/all_leaves"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:cardCornerRadius="100dp">
                                    <ImageView
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:src="@drawable/all_leaves"/>
                                </androidx.cardview.widget.CardView>
                                <TextView
                                    android:layout_width="70dp"
                                    android:layout_height="20dp"
                                    android:text="See all"/>
                                <TextView
                                    android:layout_width="70dp"
                                    android:layout_height="20dp"
                                    android:text="Leaves"/>
                            </LinearLayout>
                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Wish them"
                    android:textStyle="bold"
                    android:textSize="23dp"
                    android:layout_margin="10dp"/>
                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="15dp">
                            <androidx.cardview.widget.CardView
                                android:id="@+id/wish_person1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="100dp">
                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/wish_person1"/>
                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="15dp">
                                <TextView
                                    android:layout_width="60dp"
                                    android:layout_height="wrap_content"
                                    android:text="B'DAY"
                                    android:textColor="@color/white"
                                    android:background="@color/dark_purple"
                                    android:textAlignment="center"/>
                            </androidx.cardview.widget.CardView>
                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="20dp"
                                android:text="EthanMitchell"/>
                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="20dp"
                                android:text="Today"
                                android:textAlignment="center"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="15dp">
                            <androidx.cardview.widget.CardView
                                android:id="@+id/wish_person2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="100dp">
                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/wish_person2"/>
                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="15dp">
                                <TextView
                                    android:layout_width="60dp"
                                    android:layout_height="wrap_content"
                                    android:text="B'DAY"
                                    android:textColor="@color/white"
                                    android:background="@color/dark_purple"
                                    android:textAlignment="center"/>
                            </androidx.cardview.widget.CardView>
                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="20dp"
                                android:text="IsabellaHayes"/>
                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="20dp"
                                android:text="Today"
                                android:textAlignment="center"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="15dp">
                            <androidx.cardview.widget.CardView
                                android:id="@+id/wish_person3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="100dp">
                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/wish_person3"/>
                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="15dp">
                                <TextView
                                    android:layout_width="60dp"
                                    android:layout_height="wrap_content"
                                    android:text="B'DAY"
                                    android:textColor="@color/white"
                                    android:background="@color/dark_purple"
                                    android:textAlignment="center"/>
                            </androidx.cardview.widget.CardView>
                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="20dp"
                                android:text="NoahFoster"/>
                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="20dp"
                                android:text="Today"
                                android:textAlignment="center"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="15dp">
